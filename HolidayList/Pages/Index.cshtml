@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var holidays = (List <QuickType.Holiday>)ViewData["Holidays"];
    var state = (string)ViewData["state"];
    var place = (QuickTypePlaces.Places[])ViewData["Places"];
}

<div class="text-center">
    <h1 class="display-4">Holiday List for the State of New YorK!</h1>
    <hr />
    <table class="table table-info table-striped table-hover table-bordered" width="95%">
        <thead class="thead-dark">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Date
                </th>
                <th>
                    Cities
                </th>

            </tr>
        </thead>

        @foreach (QuickType.Holiday Holidays in holidays)
         {
              <tr>

                  <td style="width: 100px;">@Holidays.Name</td>
                  <td style="width: 100px;">@Holidays.Description</td>
                  <td style="width: 100px;">@Holidays.Date.Iso</td>
                  <td data-ng-view style="width: 100px;">

                    @foreach (QuickTypePlaces.Places Place in place)
                    {
                        if (@Place.Subcountry == state)
                        {
                           <emsp>@Place.Name,</emsp>
                        }
                    }
                  </td>

              </tr>
         }
    </table>
</div>
