@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>2019 US Holidays</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/StyleSheet.css" media="only screen and (min-width: 800px)" type="text/css" />
</head>
<body>
    <h1 align="center"><strong>2019 US Holidays</strong></h1>
    <div class="split left">
        <div class="centered">
            <img src="~/Images/nyc.jpeg" alt="Search by cities">
            <h2>Search by cities</h2>
            <p><button type="button" class="btn-outline-danger" onclick="window.location.href = '/localHolidays';">Search holidays by cities</button></p>
        </div>
    </div>

    <div class="split right">
        <div class="centered">
            <img src="~/Images/USNational.jpg" alt="Search by cities">
            <h2>List of all National holidays</h2>
            <p><button type="button" class="btn-outline-danger" onclick="window.location.href ='/NationalHoliday';">national holidays in US</button></p>
        </div>
    </div>

</body>
</html>

